@model CRM.Models.Campaign

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Campaign</legend>
        <div class="editor-field">
            @Html.HiddenFor(model => model.UserId, new { @Value = WebSecurity.CurrentUserId })
            @Html.ValidationMessageFor(model => model.UserId)
        </div>
        <div class="editor-label">
            Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CampaignName)
            @Html.ValidationMessageFor(model => model.CampaignName)
        </div>
        <hr />
        <div class="editor-label">
           Start Date
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CampaignStartDate)
            @Html.ValidationMessageFor(model => model.CampaignStartDate)
        </div>
        <hr />
        <div class="editor-label">
           End Date
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CampaignEndDate)
            @Html.ValidationMessageFor(model => model.CampaignEndDate)
        </div>
        <hr />
        <div class="editor-label">
           Campaign Status
        </div>
        <div class="editor-field">
            @Html.DropDownList("Status", new[] {
            new SelectListItem() {Text = "On Schedule", Value = "1"},
            new SelectListItem() {Text = "Delayed",Value = "2" }
            }, "Choose an option")
        </div>
        <hr />
        <div class="editor-label">
           Expected revenue
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CampaignExpectedRevenue)
            @Html.ValidationMessageFor(model => model.CampaignExpectedRevenue)
        </div>
        <hr />
        <div class="editor-label">
            Actual cost
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CampaignActualCost)
            @Html.ValidationMessageFor(model => model.CampaignActualCost)
        </div>
        <hr />
        <div class="editor-label">
           Budgeted cost
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CampaignBudgetedCost)
            @Html.ValidationMessageFor(model => model.CampaignBudgetedCost)
        </div>
        <hr />
        <div class="editor-label">
           Expected response
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CampaignExpectedResponse)
            @Html.ValidationMessageFor(model => model.CampaignExpectedResponse)
        </div>
        <hr />
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
