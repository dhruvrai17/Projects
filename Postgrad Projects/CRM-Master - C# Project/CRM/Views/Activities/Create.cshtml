@model CRM.Models.Activity

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Activity</legend>
        <div class="editor-field">
            @Html.HiddenFor(model => model.UserId, new { @Value = WebSecurity.CurrentUserId })
            @Html.ValidationMessageFor(model => model.UserId)
        </div>

        <div class="editor-label">
            Subject
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ActivitySubject)
            @Html.ValidationMessageFor(model => model.ActivitySubject)
        </div>
        <hr />
        <div class="editor-label">
            Purpose
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ActivityPurpose)
            @Html.ValidationMessageFor(model => model.ActivityPurpose)
        </div>
        <hr />
        <div class="editor-label">
            Status
        </div>
        <div class="editor-field">
            @Html.DropDownList("Status", new[] {
            new SelectListItem() {Text = "On Schedule", Value = "1"},
            new SelectListItem() {Text = "Delayed",Value = "2" }
            }, "Choose an option")
        </div>
        <hr />
        <div class="editor-label">
            Description
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ActivityDescription)
            @Html.ValidationMessageFor(model => model.ActivityDescription)
        </div>
        <hr />
        <div class="editor-label">
            Email
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ActivitySendReminderEmail)
            @Html.ValidationMessageFor(model => model.ActivitySendReminderEmail)
        </div>
        <hr />
        <div class="editor-label">
           Choose Contact
        </div>
        <div class="editor-field">
            @Html.DropDownList("ContactId", String.Empty)
            @Html.ValidationMessageFor(model => model.ContactId)
        </div>
        <div class="editor-label">
           Choose Lead
        </div>
        <div class="editor-field">
            @Html.DropDownList("LeadId", String.Empty)
            @Html.ValidationMessageFor(model => model.LeadId)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
