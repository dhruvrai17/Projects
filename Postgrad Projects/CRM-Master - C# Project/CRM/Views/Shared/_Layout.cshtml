<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Easy CRM", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            @if (Request.IsAuthenticated)
                            {
                                var userId = WebSecurity.CurrentUserId;
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Leads","Index","Lead",new { id = userId },null)</li>
                            <li>@Html.ActionLink("Contacts", "Index", "Contact", new { id = userId },null)</li>
                            <li>@Html.ActionLink("Campaigns","Index","Campaigns",new { id = userId },null)</li>
                            <li>@Html.ActionLink("Potentials","Index","Potentials",new { id = userId },null)</li>
                            <li>@Html.ActionLink("Activities","Index","Activities",new { id = userId },null)</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            }    
                            
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - An easy CRM for sales people</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
